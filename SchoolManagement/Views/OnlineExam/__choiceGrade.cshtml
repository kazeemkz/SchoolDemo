@model SchoolManagement.Model.Choice
@if (Model.IsSelected && Model.IsAnswer)
{
   

    <div style="background-color: lightgreen">
        @Html.RadioButton("Exam.Questions[" +( Model.Question.OrderNumber-1) + "].Choices[0].ChoiceID", Model.ChoiceID)
        
        @Model.Text
    </div>
}
@if (!Model.IsSelected && Model.IsAnswer)
{ 
    
    <div style="background-color: red">
        @Html.RadioButton("Exam.Questions[" +( Model.Question.OrderNumber-1) + "].Choices[0].ChoiceID", Model.ChoiceID)
        
        @Model.Text
    </div>
}
@if (!Model.IsSelected && !Model.IsAnswer)
{

    @Html.RadioButton("Exam.Questions[" + (Model.Question.OrderNumber-1) + "].Choices[0].ChoiceID", Model.ChoiceID) 
    @Model.Text 


}
