            </tr>
            <tr>
                <td><b>Term:</b></td>
                <td>@Html.DropDownList("Term", SchoolManagement.Model.LevelDictionary.TermWithNullRegistration)</td>
            </tr>
            <tr>
                <td><b>Academic Session:</b></td>
                <td>@Html.DropDownList("Session", SchoolManagement.Model.LevelDictionary.SessionList)</td>
            </tr>

        </table>

        <input type="submit" value="Search" id="search" class="btn-primary" />
    </fieldset>
}
<br />
