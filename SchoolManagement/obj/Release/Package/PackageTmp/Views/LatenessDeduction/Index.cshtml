@model IEnumerable<SchoolManagement.Model.LatenessDeduction>

@{
    ViewBag.Title = "Index";
}

<h4>LATENESS DEDUCTION</h4>
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<table class="table table-striped table-hover table-bordered table-condensed">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Hour)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Minute)
        </th>
        <th>
          <b>Amount To Be Deducted (NGN)</b>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Hour)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Minute)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AmountToBeDeducted)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LatenessDeductionID }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.LatenessDeductionID }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.LatenessDeductionID })
            </td>
        </tr>
    }

</table>
