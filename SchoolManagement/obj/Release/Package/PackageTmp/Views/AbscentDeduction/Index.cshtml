@model IEnumerable<SchoolManagement.Model.AbscentDeduction>

@{
    ViewBag.Title = "Index";
}

<h4>ABSCENT DEDUCTION</h4>
<br />
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<br />
<table class="table table-striped table-hover table-bordered table-condensed">
    <tr>
       
        <th>
            <b>Amount To Be Deducted (NGN)</b>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
           
            <td>
                @Html.DisplayFor(modelItem => item.AmountToBeDeducted)
