            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.AbscentDeductionID }) |
                @*@Html.ActionLink("Details", "Details", new { id = item.LatenessDeductionID }) |*@
                @Html.ActionLink("Delete", "Delete", new { id = item.AbscentDeductionID })
