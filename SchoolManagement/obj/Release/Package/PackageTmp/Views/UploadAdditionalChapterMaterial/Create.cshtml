            @Html.RadioButtonFor(Model => Model.Level, "SSS 2")SS 2
            @Html.RadioButtonFor(Model => Model.Level, "SSS 3")SS 3
           
            @Html.ValidationMessageFor(model => model.Level)
        </div>

