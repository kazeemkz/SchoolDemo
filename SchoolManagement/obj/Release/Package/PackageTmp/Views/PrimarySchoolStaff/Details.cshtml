@model SchoolManagement.Model.PrimarySchoolStaff
@{
    ViewBag.Title = "Details";
    //Layout = "~/Views/Shared/_Layout.mobile.cshtml";
}

<h4>STAFF DETAILS</h4>

<fieldset>

    <legend>
        @Model.LastName
    <text>'s Details</text>
</legend>


@if (ViewData["Success"] != null)
{
    <div id="successMessage">
        <b>
            Your data has now been saved successfully and will be reviewed
            as soon as possible for approval.
        </b>
    </div>
}
<div class="row-fluid">
    <div class="span3">
        <p>
            <img src="@Url.Action("GetImage", "PrimarySchoolStaff", new { id = Model.PersonID })" />
        </p>
    </div>
    <div class="span9">
        @Html.HiddenFor(model => model.PersonID)

        <div class="display-field">
            <b>
                <text>Has @Model.LastName.ToUpper() Been Approved?</text>
                :
            </b>@Html.DisplayFor(model => model.IsApproved)
            <br />
            @* @{
                    string theDate = String.Format("{0:ddd, MMM d, yyyy, hh:mm}", Model.EnrollmentDate);
                }*@
            <br />
            <b>Enrollment Date and Time:</b> @string.Format("{0:dd-MMM-yyyy, hh:mm tt}", @Model.EnrollmentDate)  @*@Model.EnrollmentDate.ToString("f")*@
        </div>

        @if (Model.IsApproved)
        {
            <br />
            <div class="display-field">
                <b>Approval Date and Time:</b>@string.Format("{0:dd-MMM-yyyy, hh:mm tt}", @Model.DateApproved)  @*@Html.DisplayFor(model => model.DateApproved)*@
            </div>
            <br />
            <div class="display-field">
                <b>Staff Identity:</b>  @Html.DisplayFor(model => model.UserID)
            </div>
        }
    </div>
</div>
<fieldset>
    <legend>@Model.LastName.ToUpper()'s Details</legend>

    <div class="display-field">
        <b>@Html.DisplayNameFor(model => model.FirstName): </b>@Html.DisplayFor(model => model.FirstName)
    </div>
    <br />

    <div class="display-field">
        <b>@Html.DisplayNameFor(model => model.Middle):</b> @Html.DisplayFor(model => model.Middle)
    </div>
    <br />

    <div class="display-field">
        <b>@Html.DisplayNameFor(model => model.LastName):</b>  @Html.DisplayFor(model => model.LastName)
    </div>
    <br />
    <div class="display-field">
        <b>Software Role:</b>  @Html.DisplayFor(model => model.Role)
    </div>
    <br />
    <div class="display-field">
        <b>Class Teacher of/School Role :</b>  @Html.DisplayFor(model => model.ClassTeacherOf)
    </div>
    <br />

    <div class="display-field">
        <b>@Html.DisplayNameFor(model => model.SubjectStrength) :</b>  @Html.DisplayFor(model => model.SubjectStrength)
    </div>

    <br />

    <div class="display-field">
        <b>@Html.DisplayNameFor(model => model.HightestQualification) :</b>  @Html.DisplayFor(model => model.HightestQualification)
    </div>

    <br />

    <div class="display-field">
        <b>@Html.DisplayNameFor(model => model.DOB) :</b> @String.Format("{0:ddd, MMM d, yyyy}", Model.DOB)
    </div>
    <br />

    <div class="display-field">
        <b>@Html.DisplayNameFor(model => model.Telephone):</b>  @Html.DisplayFor(model => model.Telephone)
    </div>
    <br />
    @* <div class="display-field">
            <b>@Html.DisplayNameFor(model => model.EnrollmentDate):</b>  @Html.DisplayFor(model => model.EnrollmentDate)
        </div>
        <br />*@

    <div class="display-field">
        <b>@Html.DisplayNameFor(model => model.BloodGroup):</b>   @Html.DisplayFor(model => model.BloodGroup)
    </div>
    <br />

    <div class="display-field">
        <b>@Html.DisplayNameFor(model => model.Genotype):</b>  @Html.DisplayFor(model => model.Genotype)
    </div>
    <br />
    <div class="display-label">
    </div>
    <div class="display-field">
        <b>@Html.DisplayNameFor(model => model.Disability) :</b>    @Html.DisplayFor(model => model.Disability)
    </div>
    <br />
</fieldset>

<fieldset>
    <legend>Account Section</legend>
    <div class="display-field">
        <b>@Html.DisplayNameFor(model => model.BankName) :</b>    @Html.DisplayFor(model => model.BankName)
        <br />
        <b>@Html.DisplayNameFor(model => model.BankAddress) :</b>    @Html.DisplayFor(model => model.BankAddress)
        <br />
        <b>@Html.DisplayNameFor(model => model.AccountName) :</b>    @Html.DisplayFor(model => model.AccountName)
        <br />
        <b>@Html.DisplayNameFor(model => model.AccountNumber) :</b>    @Html.DisplayFor(model => model.AccountNumber)
    </div>
</fieldset>


    <fieldset>
        <legend>Salary</legend>
        <div class="display-field">
            <b>Salary:</b>    @ViewBag.Salary
        </div>
    </fieldset>

<fieldset>
    <legend>Lateness To Work Deduction</legend>
    <div class="display-field">
        <b>Is Lateness to Work be Deducted from Salary?:</b>    @Html.DisplayFor(model => model.LatenessDeduction)
    </div>
</fieldset>

    <fieldset>
        <legend>Abscent To Work Deduction</legend>
        <div class="display-field">
            <b>Is Abscent to Work be Deducted from Salary?:</b>    @Html.DisplayFor(model => model.AbscentDeduction)
        </div>
    </fieldset>

    <fieldset>
        <legend>Other Deductions and Contributions Per Month</legend>
        <div class="display-field">
            @foreach(var c in Model.TheDeduction)
            {
                <b>@c.DeductionDescription</b> <text>Amount(NGN) :</text> <b>@c.Amount</b> 
                <br />
            }
            @*<b>Is Lateness to Work be Deducted from Salary?:</b>    @Html.DisplayFor(model => model.LatenessDeduction)*@
        </div>
    </fieldset>
</fieldset>
