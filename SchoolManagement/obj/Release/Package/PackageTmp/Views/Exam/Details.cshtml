            @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.LevelID }) |
            @Html.ActionLink("Details", "Details", new { id=item.LevelID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.LevelID })
            </td>*@
                </tr>
            }
        </table>

    }
</fieldset>
