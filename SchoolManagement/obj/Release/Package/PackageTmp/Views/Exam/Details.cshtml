@model SchoolManagement.Models.ExamSubjectReg
@{
    ViewBag.Title = "Details";
   
}

<h2>Details</h2>

<fieldset>
    <legend>ExamSubjectReg</legend>
    @if (Model.Term != null)
    {
        <table>
            <tr>
                <th>
                    <text>Subject</text>
                </th>
                <th>
                    <text>1st CA</text>
                </th>
                <th>
                    <text>2nd CA</text>
                </th>
                <th>
                    <text>Exam</text>
                </th>
                <th></th>
            </tr>

            @foreach (var model in Model.TheSubjectRegistration.Subjects)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => model.Name)
                    </td>
                    <td>
                        @if (model.FirstCA == null)
                        {
                            @Html.TextBoxFor(m => model.FirstCA, new { style = "width:40px" })
                        }


                        else
                        {
                            @Html.TextBoxFor(m => model.FirstCA, new { style = "width:40px", disabled = "disabled" })
                        }
                    </td>
                    <td>
                        @Html.TextBoxFor(m => model.SecondCA, new { style = "width:40px" })
                    </td>
                    <td>
                        @Html.TextBoxFor(m => model.SubjectExam, new { style = "width:40px" })
                    </td>
